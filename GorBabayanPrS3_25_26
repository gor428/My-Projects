    {
      "cell_type": "markdown",
      "source": [
        "##Full app using Mediapipe landmarks"
      ],
      "metadata": {
        "id": "JyQuASwPDi4_"
      }
    },
    {
      "cell_type": "code",
      "source": [
        "%%writefile app.py\n",
        "import streamlit as st\n",
        "import cv2\n",
        "import numpy as np\n",
        "import os\n",
        "import pandas as pd\n",
        "from PIL import Image\n",
        "from datetime import datetime, date\n",
        "from pyngrok import ngrok\n",
        "import mediapipe as mp\n",
        "\n",
        "st.set_page_config(page_title=\"Mediapipe Attendance\", layout=\"centered\")\n",
        "st.title(\"AI Attendance (Mediapipe landmarks)\")\n",
        "\n",
        "# -------------------------\n",
        "# Files / session init\n",
        "# -------------------------\n",
        "ATT_CSV = \"attendance.csv\"\n",
        "if not os.path.exists(ATT_CSV):\n",
        "    pd.DataFrame(columns=[\"Name\", \"Date\", \"Time\"]).to_csv(ATT_CSV, index=False)\n",
        "\n",
        "if \"db_embeddings\" not in st.session_state:\n",
        "    st.session_state.db_embeddings = {}   # name -> embedding (1D numpy)\n",
        "if \"names_order\" not in st.session_state:\n",
        "    st.session_state.names_order = []\n",
        "\n",
        "# -------------------------\n",
        "# Mediapipe FaceMesh helper\n",
        "# -------------------------\n",
        "mp_face = mp.solutions.face_mesh\n",
        "\n",
        "# We'll use 468 landmarks; pick a subset for speed/stability (use all for now)\n",
        "LANDMARK_INDICES = list(range(468))\n",
        "\n",
        "def image_to_landmark_embedding(pil_img):\n",
        "    \"\"\"Return a normalized embedding vector (L2-normalized) or None if no face.\"\"\"\n",
        "    img = np.array(pil_img.convert(\"RGB\"))\n",
        "    h, w, _ = img.shape\n",
        "    with mp_face.FaceMesh(static_image_mode=True, max_num_faces=1, refine_landmarks=False) as fm:\n",
        "        results = fm.process(cv2.cvtColor(img, cv2.COLOR_RGB2BGR))\n",
        "        if not results.multi_face_landmarks:\n",
        "            return None\n",
        "        lm = results.multi_face_landmarks[0].landmark\n",
        "        pts = np.array([[p.x * w, p.y * h, p.z * w] for p in lm], dtype=np.float32)  # use z scaled by w\n",
        "        # Use selected indices (all)\n",
        "        pts = pts[LANDMARK_INDICES]  # shape (K,3)\n",
        "        # Normalize relative to face center and scale by face bbox size\n",
        "        cx, cy = pts[:,0].mean(), pts[:,1].mean()\n",
        "        pts[:,0] -= cx\n",
        "        pts[:,1] -= cy\n",
        "        size = max((pts[:,0].ptp(), pts[:,1].ptp(), 1.0))\n",
        "        pts /= size\n",
        "        vec = pts.flatten()\n",
        "        # L2 normalize\n",
        "        norm = np.linalg.norm(vec) + 1e-10\n",
        "        vec = vec / norm\n",
        "        return vec  # 1D numpy array\n",
        "\n",
        "def detect_all_face_embeddings_from_pil(pil_img):\n",
        "    \"\"\"Return list of embeddings and bounding boxes for all faces in image.\"\"\"\n",
        "    img = np.array(pil_img.convert(\"RGB\"))\n",
        "    h, w, _ = img.shape\n",
        "    with mp_face.FaceMesh(static_image_mode=True, max_num_faces=10, refine_landmarks=False) as fm:\n",
        "        results = fm.process(cv2.cvtColor(img, cv2.COLOR_RGB2BGR))\n",
        "        if not results.multi_face_landmarks:\n",
        "            return [], []\n",
        "        embeddings = []\n",
        "        boxes = []\n",
        "        for face_lm in results.multi_face_landmarks:\n",
        "            pts = np.array([[p.x * w, p.y * h, p.z * w] for p in face_lm.landmark], dtype=np.float32)\n",
        "            pts_sel = pts[LANDMARK_INDICES]\n",
        "            cx, cy = pts_sel[:,0].mean(), pts_sel[:,1].mean()\n",
        "            pts_sel[:,0] -= cx\n",
        "            pts_sel[:,1] -= cy\n",
        "            size = max((pts_sel[:,0].ptp(), pts_sel[:,1].ptp(), 1.0))\n",
        "            pts_sel /= size\n",
        "            vec = pts_sel.flatten()\n",
        "            vec = vec / (np.linalg.norm(vec) + 1e-10)\n",
        "            embeddings.append(vec)\n",
        "            x1,y1 = int(np.min(pts[:,0])), int(np.min(pts[:,1]))\n",
        "            x2,y2 = int(np.max(pts[:,0])), int(np.max(pts[:,1]))\n",
        "            boxes.append((x1,y1,x2,y2))\n",
        "        return embeddings, boxes\n",
        "\n",
        "# -------------------------\n",
        "# UI: Upload DB photos\n",
        "# -------------------------\n",
        "st.header(\"1) Upload database photos (one person per image)\")\n",
        "st.write(\"Filename (without extension) will be used as the person's name.\")\n",
        "\n",
        "uploaded = st.file_uploader(\"Upload reference images\", accept_multiple_files=True, type=[\"jpg\",\"jpeg\",\"png\"])\n",
        "if uploaded:\n",
        "    added = []\n",
        "    for f in uploaded:\n",
        "        name = os.path.splitext(f.name)[0]\n",
        "        pil = Image.open(f).convert(\"RGB\")\n",
        "        emb = image_to_landmark_embedding(pil)\n",
        "        if emb is None:\n",
        "            st.warning(f\"No face found in {f.name}, skipped.\")\n",
        "            continue\n",
        "        st.session_state.db_embeddings[name] = emb\n",
        "        if name not in st.session_state.names_order:\n",
        "            st.session_state.names_order.append(name)\n",
        "        added.append(name)\n",
        "    if added:\n",
        "        st.success(\"Added: \" + \", \".join(added))\n",
        "\n",
        "if len(st.session_state.db_embeddings) == 0:\n",
        "    st.warning(\"Upload at least one reference image to continue.\")\n",
        "    st.stop()\n",
        "\n",
        "# Initialize presence set for today\n",
        "today = date.today().isoformat()\n",
        "if \"present_today\" not in st.session_state:\n",
        "    # load from CSV to keep existing marks\n",
        "    df_all = pd.read_csv(ATT_CSV)\n",
        "    st.session_state.present_today = set(df_all.loc[df_all[\"Date\"] == today, \"Name\"].tolist())\n",
        "\n",
        "# -------------------------\n",
        "# UI: camera capture and recognition\n",
        "# -------------------------\n",
        "st.header(\"2) Take photo to mark presence\")\n",
        "st.write(\"Take a photo (camera input). All faces in photo will be checked against the uploaded database.\")\n",
        "\n",
        "threshold = st.sidebar.slider(\"Similarity threshold (higher = stricter). Range 0..1\", 0.6, 0.99, 0.82, 0.01)\n",
        "\n",
        "cam = st.camera_input(\"Take a picture\")\n",
        "\n",
        "if cam:\n",
        "    # load image\n",
        "    file_bytes = np.frombuffer(cam.getvalue(), dtype=np.uint8)\n",
        "    frame = cv2.imdecode(file_bytes, cv2.IMREAD_COLOR)\n",
        "    if frame is None:\n",
        "        st.error(\"Cannot read captured image\")\n",
        "    else:\n",
        "        rgb = cv2.cvtColor(frame, cv2.COLOR_BGR2RGB)\n",
        "        pil = Image.fromarray(rgb)\n",
        "\n",
        "        embeddings, boxes = detect_all_face_embeddings_from_pil(pil)\n",
        "        if not embeddings:\n",
        "            st.error(\"No faces detected in the captured image.\")\n",
        "        else:\n",
        "            st.image(rgb, caption=\"Captured image\", use_column_width=True)\n",
        "            st.subheader(\"Recognition results:\")\n",
        "            df = pd.read_csv(ATT_CSV)\n",
        "\n",
        "            detected_names = set()\n",
        "            for i, emb in enumerate(embeddings):\n",
        "                # compute cosine similarity to each db entry\n",
        "                best_name = \"Unknown\"\n",
        "                best_sim = -1.0\n",
        "                for name, db_emb in st.session_state.db_embeddings.items():\n",
        "                    sim = float(np.dot(emb, db_emb))  # both normalized => cosine in [-1,1]\n",
        "                    if sim > best_sim:\n",
        "                        best_sim = sim\n",
        "                        best_name = name\n",
        "                # compare to threshold\n",
        "                if best_sim >= threshold:\n",
        "                    st.success(f\"Face {i+1}: {best_name} (similarity {best_sim:.3f})\")\n",
        "                    detected_names.add(best_name)\n",
        "                    # mark attendance if not already marked today\n",
        "                    if best_name not in st.session_state.present_today:\n",
        "                        now_time = datetime.now().strftime(\"%H:%M:%S\")\n",
        "                        df.loc[len(df)] = [best_name, today, now_time]\n",
        "                        df.to_csv(ATT_CSV, index=False)\n",
        "                        st.session_state.present_today.add(best_name)\n",
        "                        st.info(f\"Marked {best_name} present at {now_time}\")\n",
        "                    else:\n",
        "                        st.info(f\"{best_name} already marked present today\")\n",
        "                else:\n",
        "                    st.warning(f\"Face {i+1}: Unknown (closest match {best_name}, sim {best_sim:.3f})\")\n",
        "\n",
        "# -------------------------\n",
        "# 3) Presence table (all uploaded names)\n",
        "# -------------------------\n",
        "st.header(\"3) Class Presence Table (today)\")\n",
        "\n",
        "students = st.session_state.names_order.copy()\n",
        "# Ensure all keys present\n",
        "for n in st.session_state.db_embeddings.keys():\n",
        "    if n not in students:\n",
        "        students.append(n)\n",
        "\n",
        "rows = []\n",
        "for s in students:\n",
        "    status = \"Present\" if s in st.session_state.present_today else \"Absent\"\n",
        "    rows.append({\"Student\": s, \"Status\": status})\n",
        "\n",
        "presence_df = pd.DataFrame(rows)\n",
        "st.table(presence_df)\n",
        "\n",
        "# Download presence CSV for today\n",
        "csv = presence_df.to_csv(index=False).encode()\n",
        "st.download_button(\"Download today's presence\", data=csv, file_name=f\"presence_{today}.csv\", mime=\"text/csv\")\n",
        "\n",
        "# Small controls\n",
        "if st.button(\"Reset today's presence (remove today's marks)\"):\n",
        "    df = pd.read_csv(ATT_CSV)\n",
        "    df = df[df[\"Date\"] != today]\n",
        "    df.to_csv(ATT_CSV, index=False)\n",
        "    st.session_state.present_today = set()\n",
        "    st.success(\"Today's marks cleared. Refresh the page.\")\n"
      ],
      "metadata": {
